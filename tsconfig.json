{
  "compilerOptions": {
    "incremental": true,

    "target": "ES2022",
    "outDir": "build",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ES2022",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/"],
  "exclude": ["node_modules/"]
}
